<?xml version="1.0"?>
<robot name="wallbot">
    <material name="cable_grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="anchor_green">
        <color rgba="0 0.6 0.6 1"/>
    </material>

    <material name="wallbot_red">
        <color rgba="1 0 0 1"/>
    </material>    

    <link name="central_body">
        <visual>
            <geometry>
                <mesh filename="model://wallbot_body.stl" scale="0.002 0.002 0.002">
                </mesh>
            </geometry>
            <material name="wallbot_red"/>
            <origin xyz="-0.9 0.3 -0.5" rpy="3.14159 -1.57075 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>

        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <link name="tl_anchor">
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!--Top Left Links-->

    <link name="top_left_socket">
        <visual>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
            <material name="wallbot_red"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <link name="top_left_cable">
        <visual>
            <geometry>
                <cylinder length="4" radius="0.01"/>
            </geometry>
            <material name="cable_grey"/>
            <origin xyz="0 0 2" rpy="0 0 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <link name="top_left_anchor">
        <visual>
            <geometry>
                <cylinder length="0.4" radius="0.1"/>
            </geometry>
            <material name="anchor_green"/>
            <origin rpy="1.57075 0 0" xyz="0 0 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!--Top Left Joints (Fixed -> Revolute -> Prismatic)-->

    <joint name="base_to_top_left_socket" type="fixed">
        <parent link="top_left_socket"/>
        <child link="central_body"/>
        <origin xyz="-0.4 0 -0.3"/>
    </joint>

    <joint name="top_left_socket_cable_connector" type="revolute">
        <axis xyz="0 -1 0"/>
        <limit effort="1000.00" lower="-1.57" upper="1.57" velocity="0.5"/>
        <parent link="top_left_cable"/>
        <child link="top_left_socket"/>
        <origin xyz="0 0 0" rpy="0 -0.9 0"/>
    </joint>

    <joint name="top_left_prismatic_joint" type="prismatic">
        <axis xyz="0 0 -1"/>
        <limit effort="1000.00" lower="-2.0" upper="2.0" velocity="0.5"/>
        <parent link="top_left_anchor"/>
        <child link="top_left_cable"/>
        <origin xyz="0 0 -2" rpy="0 0 0"/>
    </joint>

    <joint name="tl_anchor_rev_joint" type="revolute">
        <axis xyz="0 -1 0"/>
        <limit effort="1000.00" lower="-2.0" upper="2.0" velocity="0.5"/>
        <parent link="tl_anchor"/>
        <child link="top_left_anchor"/>
        <origin xyz="2 0 2" rpy="0 0.9 0"/>
    </joint>

    <!--Top Right Links-->

    <link name="top_right_socket">
        <visual>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
            <material name="wallbot_red"/>
        </visual>

        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>

    </link>

    <link name="top_right_cable">
        <visual>
            <geometry>
                <cylinder length="4" radius="0.01"/>
            </geometry>
            <material name="cable_grey"/>
            <origin xyz="0 0 2" rpy="0 0 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>
    <link name="top_right_anchor">
        <visual>
            <geometry>
                <cylinder length="0.4" radius="0.1"/>
            </geometry>
            <material name="anchor_green"/>
            <origin rpy="1.57075 0 0" xyz="0 0 0.1"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!--Top Right Joints (Fixed -> Revolute -> Prismatic)-->

    <joint name="base_to_top_right_socket" type="fixed">
        <parent link="central_body"/>
        <child link="top_right_socket"/>
        <origin xyz="-0.4 0 0.3"/>
    </joint>

    <joint name="top_right_socket_cable_connector" type="revolute">
        <axis xyz="0 1 0"/>
        <limit effort="1000.00" lower="-1.57" upper="1.57" velocity="0.5"/>
        <parent link="top_right_socket"/>
        <child link="top_right_cable"/>
        <origin xyz="0 0 0" rpy="0 -0.9 0"/>
    </joint>

    <joint name="top_right_prismatic_joint" type="prismatic">
        <axis xyz="0 0 1"/>
        <limit effort="1000.00" lower="-2.0" upper="2.0" velocity="0.5"/>
        <parent link="top_right_cable"/>
        <child link="top_right_anchor"/>
        <origin xyz="0 0 2"/>
    </joint>

    <!--Bottom Left Links-->

    <link name="bottom_left_socket">
        <visual>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
            <material name="wallbot_red"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <link name="bottom_left_cable">
        <visual>
            <geometry>
                <cylinder length="4" radius="0.01"/>
            </geometry>
            <material name="cable_grey"/>
            <origin xyz="0 0 2" rpy="0 0 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>
    <link name="bottom_left_anchor">
        <visual>
            <geometry>
                <cylinder length="0.4" radius="0.1"/>
            </geometry>
            <material name="anchor_green"/>
            <origin rpy="1.57075 0 0" xyz="0 0 0.1"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>  
    </link>

    <!--Bottom Left Joints (Fixed -> Revolute -> Prismatic)-->

    <joint name="base_to_bottom_left_socket" type="fixed">
        <parent link="central_body"/>
        <child link="bottom_left_socket"/>
        <origin xyz="0.4 0 -0.3"/>
    </joint>

    <joint name="bottom_left_socket_cable_connector" type="revolute">
        <axis xyz="0 1 0"/>
        <limit effort="1000.00" lower="-1.57" upper="1.57" velocity="0.5"/>
        <parent link="bottom_left_socket"/>
        <child link="bottom_left_cable"/>
        <origin xyz="0 0 0" rpy="0 2.24159 0"/>
    </joint>

    <joint name="bottom_left_prismatic_joint" type="prismatic">
        <axis xyz="0 0 1"/>
        <limit effort="1000.00" lower="-2.0" upper="2.0" velocity="0.5"/>
        <parent link="bottom_left_cable"/>
        <child link="bottom_left_anchor"/>
        <origin xyz="0 0 2"/>
    </joint>

    <!-- ===================== Camera mounts	 ===================== -->
    <link name="front_rgb_link">
        <inertial>
          <mass value="0.05"/>
          <origin xyz="0 0 0"/>
          <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry><box size="0.04 0.04 0.02"/></geometry>
          <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
        </visual>
    </link>

    <joint name="front_rgb_joint" type="fixed">
        <parent link="central_body"/> <!-- CHANGED from base_link -->
        <child link="front_rgb_link"/>
        <origin xyz="0.20 0.00 0.30" rpy="0 0 0"/>
    </joint>

    <link name="front_ndvi_link">
        <inertial>
          <mass value="0.05"/>
          <origin xyz="0 0 0"/>
          <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry><box size="0.04 0.04 0.02"/></geometry>
          <material name="dark"><color rgba="0.2 0.2 0.2 1"/></material>
        </visual>
    </link>

    <joint name="front_ndvi_joint" type="fixed">
        <parent link="central_body"/> <!-- CHANGED from base_link -->
        <child link="front_ndvi_link"/>
        <origin xyz="0.22 0.06 0.30" rpy="0 0 0"/>
    </joint>

    <!-- Optical frames -->
    <link name="front_rgb_optical_frame">
        <inertial><mass value="1e-6"/><origin xyz="0 0 0"/><inertia ixx="1e-9" iyy="1e-9" izz="1e-9" ixy="0" ixz="0" iyz="0"/></inertial>
    </link>
    <joint name="front_rgb_optical_joint" type="fixed">
        <parent link="front_rgb_link"/>
        <child link="front_rgb_optical_frame"/>
        <origin xyz="0 0 0" rpy="-1.57079632679 0 -1.57079632679"/>
    </joint>

    <link name="front_ndvi_optical_frame">
        <inertial><mass value="1e-6"/><origin xyz="0 0 0"/><inertia ixx="1e-9" iyy="1e-9" izz="1e-9" ixy="0" ixz="0" iyz="0"/></inertial>
    </link>
    <joint name="front_ndvi_optical_joint" type="fixed">
        <parent link="front_ndvi_link"/>
        <child link="front_ndvi_optical_frame"/>
        <origin xyz="0 0 0" rpy="-1.57079632679 0 -1.57079632679"/>
    </joint>

    <!-- Gazebo Harmonic sensors for RGB + NIR -->
    <gazebo reference="front_rgb_link">
      <sensor name="front_rgb_sensor" type="camera">
        <pose>0 0 0 0 0 1.57079632679</pose>
        <update_rate>15</update_rate>
        <camera>
          <horizontal_fov>1.22173</horizontal_fov> <!-- ~70Â° -->
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip><near>0.05</near><far>50.0</far></clip>
        </camera>
        <always_on>true</always_on>
        <visualize>true</visualize>
      </sensor>
    </gazebo>

    <gazebo reference="front_ndvi_link">
      <sensor name="front_nir_sensor" type="camera">
        <pose>0 0 0 0 0 1.57079632679</pose>
        <update_rate>15</update_rate>
        <camera>
          <horizontal_fov>1.22173</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>L8</format> <!-- Monochrome to simulate NIR -->
          </image>
          <clip><near>0.05</near><far>50.0</far></clip>
        </camera>
        <always_on>true</always_on>
        <visualize>false</visualize>
      </sensor>
    </gazebo>

    <!--Bottom Right Links-->

    <link name="bottom_right_socket">
        <visual>
            <geometry>
                <sphere radius="0.075"/>
            </geometry>
            <material name="wallbot_red"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <link name="bottom_right_cable">
        <visual>
            <geometry>
                <cylinder length="4" radius="0.01"/>
            </geometry>
            <material name="cable_grey"/>
            <origin xyz="0 0 2" rpy="0 0 0"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>
    <link name="bottom_right_anchor">
        <visual>
            <geometry>
                <cylinder length="0.4" radius="0.1"/>
            </geometry>
            <material name="anchor_green"/>
            <origin rpy="1.57075 0 0" xyz="0 0 0.1"/>
        </visual>
        <collision>
          <geometry>
            <box size="0.01 0.01 0.01"/>
          </geometry>
        </collision>
        
        <inertial>
          <mass value="0.1"/>
          <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!--Bottom Right Joints (Fixed -> Revolute -> Prismatic)-->

    <joint name="base_to_bottom_right_socket" type="fixed">
        <parent link="central_body"/>
        <child link="bottom_right_socket"/>
        <origin xyz="-0.4 0 -0.3"/>
    </joint>

    <joint name="bottom_right_socket_cable_connector" type="revolute">
        <axis xyz="0 1 0"/>
        <limit effort="1000.00" lower="-1.57" upper="1.57" velocity="0.5"/>
        <parent link="bottom_right_socket"/>
        <child link="bottom_right_cable"/>
        <origin xyz="0 0 0" rpy="0 -2.24159 0"/>
    </joint>

    <joint name="bottom_right_prismatic_joint" type="prismatic">
        <axis xyz="0 0 1"/>
        <limit effort="1000.00" lower="-2.0" upper="2.0" velocity="0.5"/>
        <parent link="bottom_right_cable"/>
        <child link="bottom_right_anchor"/>
        <origin xyz="0 0 2"/>
    </joint>

    <ros2_control name="wallbot_tl_root" type="system">
      <hardware>
        <plugin>gz_ros2_control/GazeboSimSystem</plugin>
      </hardware>

      <joint name="tl_anchor_rev_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="top_left_prismatic_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="top_left_socket_cable_connector">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="top_right_prismatic_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="top_right_socket_cable_connector">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="bottom_left_prismatic_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="bottom_left_socket_cable_connector">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="bottom_right_prismatic_joint">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

      <joint name="bottom_right_socket_cable_connector">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>

    </ros2_control>

    <gazebo>
      <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <ros>
          <namespace>/</namespace>
        </ros>
        <parameters>$(find wallbot_tl_root)/yaml/ros_controller.yaml</parameters>
      </plugin>
    </gazebo>
</robot>

